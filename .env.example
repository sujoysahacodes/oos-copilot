# Environment Variables
# Copy this file to .env.local and update with your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/oos_copilot"

# External API Keys
WEATHER_API_KEY="your_openweather_api_key_here"
MAPS_API_KEY="your_google_maps_api_key_here"

# Notification Services
EMAIL_SERVICE_API_KEY="your_sendgrid_or_similar_api_key"
SMS_SERVICE_API_KEY="your_twilio_or_similar_api_key"

# Authentication (if implementing user auth)
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Application Settings
NODE_ENV="development"
PORT=3000

# AI/ML Service Endpoints (if using external ML services)
ML_SERVICE_URL="https://your-ml-service-endpoint.com"
ML_SERVICE_API_KEY="your_ml_service_api_key"

# External Integrations
POS_SYSTEM_API_URL="https://your-pos-system-api.com"
POS_SYSTEM_API_KEY="your_pos_system_api_key"

INVENTORY_SYSTEM_API_URL="https://your-inventory-system-api.com"
INVENTORY_SYSTEM_API_KEY="your_inventory_system_api_key"
